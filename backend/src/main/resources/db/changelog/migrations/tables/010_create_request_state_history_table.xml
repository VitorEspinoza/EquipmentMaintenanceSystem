<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="rafael.leonardo">
        <sql dbms="postgresql">
            CREATE TABLE request_state_history (
                                                   id SERIAL PRIMARY KEY,
                                                   idRequest INTEGER NOT NULL,
                                                   previousState VARCHAR(20),
                                                   newState VARCHAR(20) NOT NULL,
                                                   changeDate TIMESTAMP NOT NULL,
                                                   FOREIGN KEY (idRequest) REFERENCES maintenance_request(id)
            );
        </sql>
    </changeSet>
</databaseChangeLog>